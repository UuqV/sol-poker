import { deal } from '../routes/index';


var WebSocket = require('ws');

const connection = (server) => {
    const ws = new WebSocket.Server({ server });
    const connectedClients = new Set([]);
    const roundStarted = false;
    const commonCards = [];

    ws.on('connection', (webSocketClient) => {
        //when a message is received
        webSocketClient.on('message', (message) => {

            const sendToAll = (message) => {
                ws
                .clients
                .forEach( client => {
                    //send the client the current message
                    client.send(JSON.stringify(message));
                });
                
            }


            const {action, wallet} = JSON.parse(message);
            switch (action) {
                case "CONNECTION":
                    connectedClients.add(`${wallet}`);
                     // The spread operator here makes the set into an array for serialization
                    sendToAll([...connectedClients]);
                case "DEAL":
                    // If there aren't currently any cards, deal 3, effectively making a "flop"
                    const cards = commonCards.length() == 0 ? deal(3) : deal(1);
                    commonCards.push(cards);
                    commonCards = commonCards.flat();
                    sendToAll(commonCards);
            }
            
        });
        if (connectedClients.length > 0) {
            roundStarted = true;
            webSocketClient.send(JSON.stringify({roundStarted, opponents: [...connenectedClients]}));
        };

    });
}

module.exports = { connection };