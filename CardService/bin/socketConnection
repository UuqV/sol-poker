
var WebSocket = require('ws');

const connection = (server) => {
    const ws = new WebSocket.Server({ server });
    const connectedClients = [];
    const flop = [];

    ws.on('connection', (webSocketClient) => {
        //when a message is received
        webSocketClient.on('message', (message) => {
            console.log('message received', message);
            
            //for each websocket client
            ws
            .clients
            .forEach( client => {
                //send the client the current message
                client.send(`${message}`);
            });
            console.log('connectedClients', connectedClients.join(','));
            
            connectedClients.push(`${message}`);
        });
        if (connectedClients.length > 0) {
            webSocketClient.send(`${connectedClients.join(',')}`);
        };

        webSocketClient.on('flop', (flop) => {
            console.log('in socket file, flop received', flop);
            
            //for each websocket client
            ws
            .clients
            .forEach( client => {
                //send the client the current flop
                client.send(`${flop}`);
            });
            console.log('initFlop', flop.join(','));
            
            flop.push(`${flop}`);
        });
        if (flop.length > 0) {
            webSocketClient.send(`${flop.join(',')}`);
        };
    });
}

module.exports = { connection };